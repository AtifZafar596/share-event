{
  "expo": {
    "name": "Event Planner",
    "slug": "event-planner",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "eventplanner",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryAddUsageDescription": "This app needs access to save event cards to your photo library.",
        "NSPhotoLibraryUsageDescription": "This app needs access to save event cards to your photo library."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": ["WRITE_EXTERNAL_STORAGE", "READ_EXTERNAL_STORAGE"]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "Allow Event Planner to save event cards to your photo library.",
          "savePhotosPermission": "Allow Event Planner to save event cards to your photo library.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "@react-native-community/datetimepicker",
        {
          "mode": "date"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
